<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false" android:state_focused="false">
        <shape android:shape="rectangle" >
            <solid android:color="@color/alpha_black" />
            <corners android:bottomLeftRadius="5dp" android:bottomRightRadius="5dp" android:topLeftRadius="5dp" android:topRightRadius="5dp" />
            <!-- 背景色 -->
            <solid android:color="@android:color/white" />
            <!-- 邊框顏色 -->
            <stroke android:width="1.5dp" android:color="@color/alpha_black" />
            <size android:width="15dp" android:height="15dp" />
        </shape>
    </item>


    <item android:state_pressed="true" android:state_focused="true">
        <shape android:shape="rectangle" >
            <corners android:bottomLeftRadius="5dp" android:bottomRightRadius="5dp" android:topLeftRadius="5dp" android:topRightRadius="5dp" />
            <!-- 背景色 -->
            <solid android:color="@color/colorPrimary" />
            <!-- 邊框顏色 -->
            <stroke android:width="1.5dp" android:color="@color/colorPrimary" />
            <size android:width="15dp" android:height="15dp" />
        </shape>
    </item>


</selector>