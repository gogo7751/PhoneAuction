<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="event"
            type="com.eric.phoneauction.data.Event" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="4dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="2dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="8dp">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/image_onPost"
                    android:layout_width="99dp"
                    android:layout_height="99dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="0dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        app:imageUrl="@{event.images[0]}"
                        app:layout_constraintDimensionRatio="5:7"
                        tools:src="@tools:sample/backgrounds/scenic" />

                </com.google.android.material.card.MaterialCardView>


                <TextView
                    android:id="@+id/text_onPost_content_brand"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:fontFamily="@font/noto_sans"
                    android:layout_marginTop="6dp"
                    android:letterSpacing="0.15"
                    android:text="@{event.brand}"
                    android:textColor="@color/gary757575"
                    app:layout_constraintStart_toEndOf="@+id/image_onPost"
                    app:layout_constraintTop_toBottomOf="@+id/view_onPost_tag"
                    tools:text="Apple" />

                <TextView
                    android:id="@+id/text_onPost_content_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="3dp"
                    android:fontFamily="@font/noto_sans"
                    android:letterSpacing="0.15"
                    android:text="@{event.productName}"
                    android:textColor="@color/gary757575"
                    app:layout_constraintStart_toEndOf="@id/text_onPost_content_brand"
                    app:layout_constraintTop_toTopOf="@+id/text_onPost_content_brand"
                    tools:text="iPhone" />

                <TextView
                    android:id="@+id/text_onPost_content_storage"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="3dp"
                    android:ellipsize="end"
                    android:fontFamily="@font/noto_sans"
                    android:letterSpacing="0.15"
                    android:singleLine="true"
                    android:text="@{event.storage}"
                    android:textColor="@color/gary757575"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/text_onPost_content_name"
                    app:layout_constraintTop_toTopOf="@+id/text_onPost_content_name"
                    tools:text="64G" />

                <TextView
                    android:id="@+id/text_onPost_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:fontFamily="@font/noto_sans"
                    android:letterSpacing="0.15"
                    android:textColor="@color/gary757575"
                    android:textSize="12sp"
                    android:layout_marginTop="6dp"
                    app:layout_constraintStart_toEndOf="@+id/image_onPost"
                    app:layout_constraintTop_toBottomOf="@+id/text_onPost_content_brand"
                    app:price="@{event.price}"
                    tools:text="NT$9999" />

                <View
                    android:id="@+id/view_onPost_tag"
                    android:layout_width="38dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="12dp"
                    android:background="@drawable/button_tag"
                    app:layout_constraintStart_toEndOf="@id/image_onPost"
                    app:layout_constraintTop_toTopOf="@id/image_onPost" />

                <TextView
                    android:id="@+id/text_onPost_tag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/noto_sans"
                    android:letterSpacing="0.1"
                    android:maxLines="1"
                    android:text="@{event.tag}"
                    android:textColor="@color/gary757575"
                    android:textSize="12dp"
                    app:layout_constraintBottom_toBottomOf="@id/view_onPost_tag"
                    app:layout_constraintEnd_toEndOf="@id/view_onPost_tag"
                    app:layout_constraintStart_toStartOf="@id/view_onPost_tag"
                    app:layout_constraintTop_toTopOf="@id/view_onPost_tag"
                    tools:text="拍賣" />

                <ImageView
                    android:id="@+id/text_onPost_delete"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:visibility="gone"
                    android:background="@drawable/ic_close"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>